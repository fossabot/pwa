{
  "settings": {
    "language": "en-US",
    "currency": "USD"
  },
  "assets": {
    "logo": "<svg>...</svg>",
    "icons": {
      "back": "https://someurl.com/.../image.png"
    }
  },
  "colors": {
    "background": "#f8f8f8",
    "light": "#fff",
    "dark": "#000",
    "placeholder": "#f2f2f2",
    "primary": "#fa5400",
    "primaryContrast": "#fff",
    "accent": "#5ccee3",
    "accentContrast": "#fff",
    "cta": "#fa5400",
    "ctaContrast": "#fff",
    "success": "#35cc29",
    "warning": "#ff9300",
    "error": "#ff0000",
    "darkGray": "#eaeaea",
    "shade3": "#9a9a9a",
    "shade4": "#b5b5b5",
    "shade5": "#ccc",
    "shade6": "#656565",
    "shade7": "#eaeaea",
    "shade8": "#f7f7f7",
    "shade9": "#8d8d8d",
    "shade10": "#f4f4f4",
    "shade11": "#747474",
    "shade12": "#939393"
  },
  "typography": {
    "fontFamily": "Roboto, Arial, sans-serif",
    "fontSizeBase": 16,
    "lineHeightBase": 1.5
  },
  "shadows": {
    "baseShadow": "rgba(0, 0, 0, .117647) 0 1px 6px, rgba(0, 0, 0, .117647) 0 1px 4px",
    "0": "none",
    "1": "0px 1px 3px 0px rgba(0,0,0,0.2),0px 1px 1px 0px rgba(0,0,0,0.14),0px 2px 1px -1px rgba(0,0,0,0.12)",
    "2": "0px 1px 5px 0px rgba(0,0,0,0.2),0px 2px 2px 0px rgba(0,0,0,0.14),0px 3px 1px -2px rgba(0,0,0,0.12)",
    "3": "0px 1px 8px 0px rgba(0,0,0,0.2),0px 3px 4px 0px rgba(0,0,0,0.14),0px 3px 3px -2px rgba(0,0,0,0.12)"
  },
  "shapes": {
    "radius": {
      "0": 0,
      "1": 4,
      "2": 8,
      "p0": "0%",
      "p25": "25%",
      "p50": "50%",
      "p75": "100%"
    },
    "rectangle": 0,
    "circle": "100%"
  },
  "spacing": {
    "1": 4,
    "2": 8,
    "3": 12,
    "4": 16,
    "5": 20,
    "6": 24,
    "7": 28,
    "8": 32,
    "9": 36,
    "10": 40
  },
  "pages": [
    {
      "pattern": "/item/:productId",
      "name": "Product Detail Page",
      "widgets": [
        {
          "name": "ProductHeader",
          "id": "@shopgate/engage/ProductHeader",
          "settings": {
            "showRating": true,
            "showManufacturer": true,
            "showShipping": true,
            "showAvailability": true,
            "showStockInfo": true
          },
          "styles": {
            "widget": {
              "background": "$.colors.light",
              "padding": "$.spacing.4"
            },
            "name": {
              "fontSize": 20,
              "textAlign": "left"
            },
            "rating": {
              "marginBottom": "$.spacing.2",
              "lineHeight": "0.75rem"
            },
            "info": {
              "marginTop": "$.spacing.1"
            },
            "shipping": {
              "color": "$.colors.success",
              "fontSize": "0.875rem"
            },
            "availability": {
              "fontSize": "0.875rem"
            },
            "stockInfo": {
              "fontSize": "0.875rem"
            },
            "prices": {
              "textAlign": "right",
              "marginLeft": "$.spacing.4"
            },
            "priceStriked": {
              "msrp": {
                "color": "$.colors.shade3",
                "fontSize": "0.875rem",
                "marginRight": "$.spaces.1"
              },
              "msrpStriked": {
                "fontSize": "0.875rem"
              }
            },
            "ctas": {
              "container": {
                "right": "$.spaces.4",
                "top": "-30px"
              },
              "favoriteBtn": {
                "marginRight": "$.spaces.4",
                "fontSize": 24
              }
            }
          }
        }
      ]
    }
  ]
}
